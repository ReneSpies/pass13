<resources>

    <style name="pass13.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="bottomNavigationStyle">@style/Widget.pass13.BottomNavigationBar</item>
        <item name="materialButtonStyle">@style/Widget.pass13.Button.OutlinedButton</item>
        <item name="rippleColor">@color/primaryLightColor</item>
        <item name="checkboxStyle">@style/Widget.pass13.Checkbox</item>
        <item name="sliderStyle">@style/Widget.pass13.Slider</item>
        <item name="android:colorBackground">@color/primaryBackgroundColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="pass13.AppTheme.Launcher" parent="pass13.AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="pass13.AppTheme.ToolbarTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PasswordTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.pass13.BottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/primaryBackgroundColor</item>
        <item name="itemRippleColor">@color/primaryLightColor</item>
    </style>

    <style name="Widget.pass13.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="iconTint">@color/primaryTextColor</item>
        <item name="rippleColor">@color/primaryLightColor</item>
        <item name="strokeColor">@color/primaryTextColor</item>
    </style>

    <style name="Widget.pass13.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/primaryTextColor</item>
        <item name="rippleColor">@color/primaryLightColor</item>
    </style>

    <style name="Widget.pass13.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbStrokeWidth">1dp</item>
        <item name="thumbStrokeColor">@color/primaryTextColor</item>
        <item name="trackColor">@color/primaryTextColor</item>
        <item name="tickColor">@android:color/transparent</item>
    </style>
</resources>
