<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<com.google.android.material.appbar.MaterialToolbar
		android:id="@+id/main_activity_toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/color_primary"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/main_activity_toolbar_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/comfortaa_medium"
			android:gravity="center"
			android:text="@string/app_name"
			android:textAppearance="?attr/textAppearanceHeadline6"
			android:textStyle="bold" />

	</com.google.android.material.appbar.MaterialToolbar>

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/main_activity_password_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:textAppearance="@style/TextAppearance.AppCompat.Large"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="32dp" />

	<LinearLayout
		android:id="@+id/main_activity_linear_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/standard_8dp"
		android:orientation="horizontal"
		android:padding="@dimen/standard_8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/main_activity_password_view">

		<androidx.appcompat.widget.AppCompatImageButton
			android:id="@+id/main_activity_renew_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/standard_4dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:padding="@dimen/standard_16dp"
			android:src="@drawable/ic_refresh_36dp" />

		<androidx.appcompat.widget.AppCompatImageButton
			android:id="@+id/main_activity_copy_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/standard_4dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:padding="@dimen/standard_16dp"
			android:src="@drawable/ic_content_copy_36dp" />
	</LinearLayout>

	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/main_activity_export_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/standard_8dp"
		android:background="?attr/selectableItemBackgroundBorderless"
		android:padding="@dimen/standard_16dp"
		android:src="@drawable/ic_file_download_36dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/main_activity_linear_layout" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/main_activity_reminder"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/standard_8dp"
		android:text="@string/reminder"
		android:textAlignment="center"
		android:textAppearance="@style/TextAppearance.AppCompat.Large"
		app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>